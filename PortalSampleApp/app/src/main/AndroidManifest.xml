<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meta.portal.sdk.app">

    <uses-permission
        android:name="com.facebook.portal.permission.SHOW_SMART_CAMERA_EDITOR" />
    <uses-permission
        android:name="com.facebook.portal.permission.SMART_CAMERA_CONTROL" />
    <uses-permission
        android:name="com.facebook.portal.permission.SMART_CAMERA_METADATA" />
    <uses-permission android:name="com.facebook.portal.permission.ACCESS_CAMERA_MIC_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.PortalSampleApp">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.PortalSampleApp">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".CallingActivity"
            android:exported="true"
            android:theme="@style/Theme.PortalSampleApp">
        </activity>
        <activity
            android:name=".NotificationsActivity"
            android:exported="true"
            android:theme="@style/Theme.PortalSampleApp">
        </activity>
        <activity
            android:name=".CompanionActivity"
            android:exported="true"
            android:theme="@style/Theme.PortalSampleApp">
        </activity>
        <activity
            android:name=".HandRaiseActivity"
            android:exported="true"
            android:theme="@style/Theme.PortalSampleApp">
        </activity>
        <activity
            android:name=".SmartCameraActivity"
            android:exported="true"
            android:theme="@style/Theme.PortalSampleApp">
        </activity>
        <activity
            android:name=".PrivacyShutterActivity"
            android:exported="true"
            android:theme="@style/Theme.PortalSampleApp">
        </activity>
    </application>

</manifest>
