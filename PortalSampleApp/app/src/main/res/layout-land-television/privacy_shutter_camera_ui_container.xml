<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="XMLRelativeLayout"
    android:id="@+id/camera_ui_container"
    android:layoutDirection="ltr"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipChildren="false"
    android:clipToPadding="false">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipChildren="false"
        android:clipToPadding="false">

        <RelativeLayout
            android:id="@+id/debug_mode_layout_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <View
                android:id="@+id/layout_view_1"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hairline_height"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="102dp"
                android:background="@color/layout_line"
                android:focusable="false"
                android:clickable="false"/>

            <View
                android:id="@+id/layout_view_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/hairline_height"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="54dp"
                android:background="@color/layout_line"
                android:focusable="false"
                android:clickable="false"/>

            <RelativeLayout
                android:id="@+id/layout_view_3"
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="369dp"
                android:layout_marginBottom="54dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="96 PX"
                    android:textSize="14sp"
                    android:textColor="@color/layout_line"/>

            </RelativeLayout>

            <View
                android:id="@+id/layout_view_4"
                android:layout_width="@dimen/hairline_height"
                android:layout_height="63dp"
                android:layout_marginStart="425dp"
                android:layout_marginBottom="59dp"
                android:layout_alignParentBottom="true"
                android:background="@color/layout_line"
                android:focusable="false"
                android:clickable="false"/>

            <View
                android:id="@+id/layout_view_5"
                android:layout_width="@dimen/hairline_height"
                android:layout_height="63dp"
                android:layout_marginStart="473dp"
                android:layout_marginBottom="59dp"
                android:layout_alignParentBottom="true"
                android:background="@color/layout_line"
                android:focusable="false"
                android:clickable="false"/>

            <View
                android:id="@+id/layout_view_6"
                android:layout_width="@dimen/hairline_height"
                android:layout_height="44dp"
                android:layout_marginStart="487dp"
                android:layout_marginBottom="59dp"
                android:layout_alignParentBottom="true"
                android:background="@color/layout_line"
                android:focusable="false"
                android:clickable="false"/>

            <RelativeLayout
                android:id="@+id/layout_view_7"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="429dp"
                android:layout_marginBottom="102dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="96 PX"
                    android:textSize="14sp"
                    android:textColor="@color/layout_line"/>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layout_view_8"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="477dp"
                android:layout_marginBottom="102dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="16 PX"
                    android:textSize="14sp"
                    android:textColor="@color/layout_line"/>

            </RelativeLayout>

            <View
                android:id="@+id/layout_view_9"
                android:layout_width="@dimen/hairline_height"
                android:layout_height="105dp"
                android:layout_marginStart="425dp"
                android:layout_marginBottom="54dp"
                android:layout_alignParentBottom="true"
                android:background="@color/layout_line"
                android:focusable="false"
                android:clickable="false"/>

            <View
                android:id="@+id/layout_view_10"
                android:layout_width="27dp"
                android:layout_height="@dimen/hairline_height"
                android:layout_marginStart="425dp"
                android:layout_marginTop="381dp"
                android:background="@color/layout_line"
                android:focusable="false"
                android:clickable="false"/>

            <View
                android:id="@+id/layout_view_11"
                android:layout_width="27dp"
                android:layout_height="@dimen/hairline_height"
                android:layout_marginStart="509dp"
                android:layout_marginTop="381dp"
                android:background="@color/layout_line"
                android:focusable="false"
                android:clickable="false"/>

            <View
                android:id="@+id/layout_view_12"
                android:layout_width="@dimen/hairline_height"
                android:layout_height="105dp"
                android:layout_marginStart="535dp"
                android:layout_marginBottom="54dp"
                android:layout_alignParentBottom="true"
                android:background="@color/layout_line"
                android:focusable="false"
                android:clickable="false"/>

            <RelativeLayout
                android:id="@+id/layout_view_13"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginStart="456dp"
                android:layout_marginTop="372dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="220 PX"
                    android:textSize="14sp"
                    android:textColor="@color/layout_line"/>

            </RelativeLayout>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="54dp"
            android:clipChildren="false"
            android:clipToPadding="false">

            <ImageButton
                android:id="@+id/camera_button"
                android:layout_width="@dimen/privacy_shutter_camera_button_width"
                android:layout_height="@dimen/privacy_shutter_camera_button_height"
                android:src="@drawable/button_privacy_shutter_camera_tv"
                android:background="@drawable/button_privacy_shutter_tv"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/privacy_shutter_camera_button_margin_right"
                android:adjustViewBounds="true"
                android:tint="@color/color_selector_tv"
                android:stateListAnimator="@animator/button_bg_selector"/>

            <ImageButton
                android:id="@+id/microphone_button"
                android:layout_width="@dimen/privacy_shutter_microphone_button_width"
                android:layout_height="@dimen/privacy_shutter_microphone_button_height"
                android:src="@drawable/button_privacy_shutter_microphone_tv"
                android:background="@drawable/button_privacy_shutter_tv"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"
                android:tint="@color/color_selector_tv"
                android:stateListAnimator="@animator/button_bg_selector"/>

        </LinearLayout>

        <com.meta.portal.sdk.app.privacyshutter.VisualizerView
            android:id="@+id/visualizer"
            android:layout_width="179dp"
            android:layout_height="94dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@android:color/darker_gray"
            app:numColumns="100"
            app:renderColor="@color/black"
            app:renderRange="both"
            app:renderType="pixel"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="55dp"
            android:layout_marginEnd="45dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
