<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/camera_ui_container"
    android:layoutDirection="ltr"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="55dp">

            <ImageButton
                android:id="@+id/camera_button"
                android:layout_width="@dimen/privacy_shutter_camera_button_width"
                android:layout_height="@dimen/privacy_shutter_camera_button_height"
                android:src="@drawable/button_privacy_shutter_camera"
                android:background="@drawable/button_privacy_shutter"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/privacy_shutter_camera_button_margin_right"
                android:adjustViewBounds="true"/>

            <ImageButton
                android:id="@+id/microphone_button"
                android:layout_width="@dimen/privacy_shutter_microphone_button_width"
                android:layout_height="@dimen/privacy_shutter_microphone_button_height"
                android:src="@drawable/button_privacy_shutter_microphone"
                android:background="@drawable/button_privacy_shutter"
                android:layout_centerVertical="true"
                android:adjustViewBounds="true"/>

        </LinearLayout>

        <com.meta.portal.sdk.app.privacyshutter.VisualizerView
            android:id="@+id/visualizer"
            android:layout_width="179dp"
            android:layout_height="94dp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginTop="@dimen/spacing_large"
            android:background="@android:color/darker_gray"
            app:numColumns="100"
            app:renderColor="@color/black"
            app:renderRange="both"
            app:renderType="pixel"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="55dp"
            android:layout_marginEnd="45dp"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
