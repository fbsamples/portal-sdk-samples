<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hairline_height"
        android:layout_alignParentTop="true"
        android:background="#26FFFFFF"
        android:focusable="false"
        android:clickable="false"/>

    <TextView
        android:id="@+id/feature_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/feature_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="45dp"
        android:text=""
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        android:layout_toRightOf="@+id/feature_number"/>

    <TextView
        android:id="@+id/key_hash"
        android:layout_width="603dp"
        android:layout_height="72dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="75dp"
        android:text=""
        android:background="@drawable/rounded_corner"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:paddingLeft="29dp"
        android:gravity="center_vertical|start"
        android:layout_below="@+id/feature_title"
        android:layout_alignParentStart="true"/>

    <Button
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/request_token_button"
        android:layout_width="250dp"
        android:layout_height="72dp"
        android:layout_marginTop="132dp"
        android:layout_marginLeft="14dp"
        android:gravity="center"
        android:layout_toRightOf="@+id/key_hash"
        android:text="Request Token"
        android:textSize="26sp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:background="@drawable/button_fbns_default_ripple"
        app:backgroundTint="@null"
        style="?android:attr/borderlessButtonStyle"/>

    <ImageButton
        android:id="@+id/info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="82dp"
        android:src="@drawable/ic_info"
        android:background="#00000000"
        android:adjustViewBounds="true"
        android:layout_alignParentEnd="true"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/hairline_height"
        android:layout_alignParentBottom="true"
        android:background="#26FFFFFF"
        android:focusable="false"
        android:clickable="false"/>

</RelativeLayout>
