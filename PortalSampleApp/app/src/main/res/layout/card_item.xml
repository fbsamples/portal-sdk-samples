<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="32dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

  <RelativeLayout
      android:layout_width="@dimen/card_width"
      android:layout_height="@dimen/card_height">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/feature_name_height"
        android:layout_marginTop="@dimen/feature_name_margin_top"
        android:layout_marginLeft="@dimen/feature_name_margin_left"
        android:orientation="horizontal">

    <ImageView
        android:id="@+id/feature_icon"
        android:layout_width="@dimen/feature_icon_size"
        android:layout_height="@dimen/feature_icon_size"
        android:layout_gravity="center_vertical"
        android:src="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/feature_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"/>

    </LinearLayout>

    <TextView
        android:id="@+id/demo_mode_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/demo_mode_title_margin_bottom"
        android:layout_marginLeft="@dimen/demo_mode_title_margin_left"
        android:text=""
        android:textSize="26sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="center"/>

  </RelativeLayout>
</androidx.cardview.widget.CardView>
