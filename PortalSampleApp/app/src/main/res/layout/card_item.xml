<androidx.cardview.widget.CardView
    android:id="@+id/card_view"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="32dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="false"
    app:cardUseCompatPadding="true">

  <RelativeLayout
      android:layout_width="@dimen/card_width"
      android:layout_height="@dimen/card_height">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/feature_name_margin_bottom"
        android:layout_marginLeft="@dimen/feature_name_margin_left"
        android:orientation="vertical">

      <TextView
          android:id="@+id/feature_name"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/feature_name_height"
          android:layout_marginBottom="@dimen/feature_name_padding_bottom"
          android:text=""
          android:textSize="26sp"
          android:textStyle="bold"
          android:textColor="@color/white"
          android:textAlignment="center"/>

      <TextView
          android:id="@+id/class_name_title"
          android:layout_width="wrap_content"
          android:layout_height="@dimen/class_name_title_height"
          android:text=""
          android:textSize="22sp"
          android:textColor="@color/white"
          android:textAlignment="center"/>

    </LinearLayout>

  </RelativeLayout>
</androidx.cardview.widget.CardView>
