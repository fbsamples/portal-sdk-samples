<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="XMLRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="250dp">

    <TextView
        android:id="@+id/feature_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="10dp"
        android:text=""
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        android:layout_alignParentStart="true"/>

    <TextView
        android:id="@+id/feature_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:layout_marginLeft="45dp"
        android:text=""
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textAlignment="textStart"
        android:layout_toRightOf="@+id/feature_number"/>

    <TextView
        android:id="@+id/rcvd_message_text"
        android:layout_width="594dp"
        android:layout_height="134dp"
        android:layout_below="@+id/feature_title"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_corner"
        android:gravity="center_vertical|start"
        android:paddingLeft="29dp"
        android:text="Received message will appear here"
        android:textColor="@color/white"
        android:textSize="18sp" />

    <ImageButton
        android:id="@+id/info_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="34dp"
        android:src="@drawable/ic_info"
        android:background="#00000000"
        android:adjustViewBounds="true"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>
